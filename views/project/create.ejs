<div class="flex justify-between w-full overflow-hidden">
	<div class="text-black p-2 font-semibold text-lg">Add project</div>
</div>

<div class="w-full mt-2.5 rounded-lg shadow-md overflow-hidden border border-gray-700 bg-gray-800">
	<!-- Card Content -->
	<div class="relative overflow-x-auto shadow-md sm:rounded-lg p-6">
		<form
			action="/admin/project/store"
			method="post"
			class="w-full mx-auto space-y-6"
			enctype="multipart/form-data"
		>
			<div class="grid grid-cols-2 gap-6">
				<!-- Name Input -->
				<div>
					<label
						for="name"
						class="block mb-2 text-sm font-medium text-gray-300"
						>Name<span class="text-red-600">*</span></label
					>
					<input
						type="text"
						id="name"
						name="name"
						placeholder="Name"
						required
						class="bg-gray-700 border border-gray-600 text-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5 h-10"
					/>
				</div>

				<!-- Title Input -->
				<div>
					<label
						for="title"
						class="block mb-2 text-sm font-medium text-gray-300"
						>Title<span class="text-red-600">*</span></label
					>
					<input
						type="text"
						id="title"
						name="title"
						placeholder="Title"
						required
						class="bg-gray-700 border border-gray-600 text-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5 h-10"
					/>
				</div>

				<!-- Subtitle Input -->
				<div>
					<label
						for="subTitle"
						class="block mb-2 text-sm font-medium text-gray-300"
						>Subtitle<span class="text-red-600">*</span></label
					>
					<input
						type="text"
						id="subTitle"
						name="subTitle"
						placeholder="Subtitle"
						required
						class="bg-gray-700 border border-gray-600 text-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5 h-10"
					/>
				</div>

				<!-- Status Input -->
				<div>
					<label
						for="status"
						class="block mb-2 text-sm font-medium text-gray-300"
						>Status<span class="text-red-600">*</span></label
					>
					<select
						id="status"
						name="status"
						required
						class="bg-gray-700 border border-gray-600 text-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5 h-10"
					>
						<option
							value=""
							disabled
						>
							Select status
						</option>
						<option value="pending">Pending</option>
						<option value="in-progress">In Progress</option>
						<option value="completed">Completed</option>
						<option value="archived">Archived</option>
					</select>
				</div>

				<!-- Live Status Toggle -->
				<div>
					<label
						for="liveStatus"
						class="block mb-2 text-sm font-medium text-gray-300"
						>Live Status<span class="text-red-600">*</span></label
					>
					<select
						id="liveStatus"
						name="liveStatus"
						required
						class="bg-gray-700 border border-gray-600 text-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5 h-10"
					>
						<option value="true">Live</option>
						<option value="false">Not Live</option>
					</select>
				</div>

				<!-- Display Priority Input -->
				<div>
					<label
						for="displayPriority"
						class="block mb-2 text-sm font-medium text-gray-300"
						>Display Priority<span class="text-red-600">*</span></label
					>
					<input
						type="number"
						id="displayPriority"
						name="displayPriority"
						placeholder="Priority"
						required
						class="bg-gray-700 border border-gray-600 text-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5 h-10"
					/>
				</div>

				<!-- Rating Input -->
				<div>
					<label
						for="rating"
						class="block mb-2 text-sm font-medium text-gray-300"
						>Rating</label
					>
					<input
						type="number"
						id="rating"
						name="rating"
						placeholder="Rating (1-5)"
						min="1"
						max="5"
						step="0.5"
						class="bg-gray-700 border border-gray-600 text-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5 h-10"
					/>
				</div>

				<!-- Feedback Input -->
				<div class="col-span-2">
					<label
						for="feedback"
						class="block mb-2 text-sm font-medium text-gray-300"
						>Feedback</label
					>
					<textarea
						id="feedback"
						name="feedback"
						placeholder="Enter feedback here..."
						rows="3"
						class="bg-gray-700 border border-gray-600 text-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5"
					></textarea>
				</div>

				<!-- Description Input -->
				<div class="col-span-2">
					<label
						for="description"
						class="block mb-2 text-sm font-medium text-gray-300"
						>Description<span class="text-red-600">*</span></label
					>
					<textarea
						id="description"
						name="description"
						placeholder="Enter description here..."
						rows="4"
						required
						class="bg-gray-700 border border-gray-600 text-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5"
					></textarea>
				</div>
			</div>

			<!-- Submit Button -->
			<div class="flex justify-end mt-4">
				<button
					type="submit"
					class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition duration-300"
				>
					Submit
				</button>
			</div>
		</form>
	</div>
</div>
